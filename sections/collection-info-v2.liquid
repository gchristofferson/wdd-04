<div data-section-id="{{ section.id }}" data-section-type="collection-info-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<!--banner-->
    <div class="container essential-ver2">
            <div class="essential-img h4-colect-ovl">
                <a href="{{section.settings.b1_img_url}}" class="hover-images">
                  
                  <img {%if section.settings.b1_bg_img == blank%}src="{{'h4_colect5.jpg'| asset_url }}" 
                          {%else%}
                      src="{{section.settings.b1_bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" /> 
              	</a>
                <a href="{{section.settings.b2_img_url}}" class="hover-images">
                  
                  <img {%if section.settings.b2_bg_img == blank%}src="{{'h4_colect6.jpg'| asset_url }}" 
                          {%else%}
                      src="{{section.settings.b2_bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" /> 
              	</a>
            </div>
            <div class="content">
                <h3 class="title">{{section.settings.title_1}}</h3>
                <p class="desc">{{section.settings.title_2}}</p>
                <a href="{{section.settings.btn_url}}" class="btn-colect">{{section.settings.btn_text}} <span></span></a>
            </div>
        </div>
    <!--en-banner-->
</div>
{% schema %}
{
  "name": "Collection info v2",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
	{
      "type": "header",
      "content": "Image 1"
    },
	{
      "type": "image_picker",
      "id": "b1_bg_img",
      "label": "Image",
      "info": "400x528px recommended"
    },
	{
      "id": "b1_img_url",
      "type": "url",
      "default": "/collections/all",
      "label": "Image link"
    },
	{
      "type": "header",
      "content": "Image 2"
    },
	{
      "type": "image_picker",
      "id": "b2_bg_img",
      "label": "Image",
      "info": "369x528px recommended"
    },
	{
      "id": "b2_img_url",
      "type": "url",
      "default": "/collections/all",
      "label": "Image link"
    },
	{
      "type": "header",
      "content": "Content"
    },
	{
      "type": "text",
      "id": "title_1",
		"default":"Limited autumn collection",
      "label": "Title 1"
    },
      {
      "type": "text",
      "id": "title_2",
	"default":"Urban collection for women compose contemporary inspiration and elegant sophisticated shapes.",
      "label": "Title 2"
    },
	{
      "type": "header",
      "content": "Button"
    },
	{
      "type": "text",
      "id": "btn_text",
		"default":"Show collection",
      "label": "Button Title"
    },
	{
    "id": "btn_url",
      "type": "url",
      "default": "/collections/all",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Collection info v2",
      "category": "Collection"
    }
  ]
}
{% endschema %}