<div data-section-id="{{ section.id }}" data-section-type="collection-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
	<!-- shop by cate-->
  <div class="new-collection">
      <div class="container">
          <div class="row">
            {% if section.blocks.size > 0 %} 
         		{% for block in section.blocks %}
              <div class="col-xs-12 col-sm-6 col-md-6 c-item">
                  
                	<a href="{{block.settings.img_url}}" class="hover-images">
                      <img {%if block.settings.shop_img == blank%}src="{{'home2_c1.jpg'| asset_url }}" 
                          {%else%}
                      src="{{block.settings.shop_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />   
                  </a>
                  <h3 class="h-colect-title v3">{{block.settings.title}}</h3>
              </div>

            {% endfor %}
      		{% endif %}
          </div>
      </div>
  </div>
  <!-- end shopbycate-->
</div>
{% schema %}
{
  "name": "Collection v2",
  "max_blocks": 2,
  "class": "index-section",
  "settings": [
  {
    "type": "header",
    "content": "Section Space"
  },
  {
    "type": "text",
    "id": "margin_top",
    "label": "Margin Top",
    "info": "Defined in pixels. Do not add the 'px' unit."
  },
  {
    "type": "text",
    "id": "margin_bottom",
    "label": "Margin Bottom",
    "info": "Defined in pixels. Do not add the 'px' unit."
  }
],
"blocks": [
  {
    "type": "image",
    "name": "Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "shop_img",
        "label": "Image",
        "info": "570 x 402px recommended"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Collection title"
      },
      {
        "id": "img_url",
        "type": "url",
        "default": "/collections/all",
        "label": "Image link"
      }
    ]
  }
],

  "presets": [
    {
      "name": "Collection v2",
      "category": "Collection"
    }
  ]
}
{% endschema %}