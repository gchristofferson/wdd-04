<div data-section-id="{{ section.id }}" data-section-type="slide-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<!--slide-->
  <div class="page-right-content v5">
  	<div class="slider-home3 slider-home2">
          <div class="js-slider-home3">
            {% if section.blocks.size > 0 %} 
         	{% for block in section.blocks %}
              <div class="items">
                  <img {%if block.settings.bg_img == blank%}src="{{'h2_slide_1.jpg'| asset_url }}" 
                      {%else%}
                  src="{{block.settings.bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />   
                  <div class="container">
                      <div class="box-content-left text-ver2 ">
                          <p class="h3-slide-desc v2 h2-desc-c">{{block.settings.text_1}}</p>
                          <h3 class="h3-slide-title v3 h2-title-c">{{block.settings.text_2}}</h3>
                      </div>
                  </div>
              </div>
            {% endfor %}
      		{% endif %}
          </div>
          <a class="btn-next v2">{{section.settings.btn_next}}</a>
          <a class="slide-scroll">{{section.settings.btn_scroll}}<span></span></a>
  </div>
  </div>
        <!--endslide-->
  </div>
{% schema %}
{
  "name": "Slide v2",
	"max_blocks": 3,
  "class": "index-section",
  "settings": [
  {
    "type": "header",
    "content": "Section Space"
  },
  {
    "type": "text",
    "id": "margin_top",
    "label": "Margin Top",
    "info": "Defined in pixels. Do not add the 'px' unit."
  },
  {
    "type": "text",
    "id": "margin_bottom",
    "label": "Margin Bottom",
    "info": "Defined in pixels. Do not add the 'px' unit."
  },
  {
    "type": "text",
    "id": "btn_next",
    "label": "Next Button",
    "default": "next"
  },
  {
    "type": "text",
    "id": "btn_scroll",
    "label": "Button Scroll",
    "default": "scroll down"
  }

],
"blocks": [
      {
        "type": "image",
        "name": "Image slide",
        "settings": [
          {
            "type": "image_picker",
          	"id": "bg_img",
          	"label": "Image Slider",
			"info": "1170x890px recommended"
          },
		  {
    "type": "header",
    "content": "Title 1"
  },
{
    "type": "text",
    "id": "text_1",
    "label": "Text 1",
    "default": "Autumn 2018"
  },
{
    "type": "header",
    "content": "Title 2"
  },
{
    "type": "text",
    "id": "text_2",
    "label": "Text 2",
    "default": "Wedding dress trends"
  }
        ]
      }
    ],
  "presets": [
    {
      "name": "Slide v2",
      "category": "Slideshow"
    }
  ]

}
{% endschema %}