<div data-section-id="{{ section.id }}" data-section-type="shipping" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
	<!-- shop by cate-->
  <div class="feature text-center">
    <div class="container">
        <div class="row">
           {% if section.blocks.size > 0 %} 
         		{% for block in section.blocks %}
            <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 feature-inner">
                <div class="feature-img">
                  	<img {%if block.settings.shop_img == blank%}src="{{'vow-gift.png'| asset_url }}" 
                          {%else%}
                      src="{{block.settings.shop_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" /> 
                </div>
                <div class="feature-info">
                    <h3>{{block.settings.title_1}}</h3>
                    <p>{{block.settings.title_2}}</p>
                </div>
            </div>
			{% endfor %}
      		{% endif %}
        </div>
    </div>
</div>
  <!-- end shopbycate-->
</div>
{% schema %}
{
  "name": "Shipping v1",
  "max_blocks": 4,
  "class": "index-section",
  "settings": [
  {
    "type": "header",
    "content": "Section Space"
  },
  {
    "type": "text",
    "id": "margin_top",
    "label": "Margin Top",
    "info": "Defined in pixels. Do not add the 'px' unit."
  },
  {
    "type": "text",
    "id": "margin_bottom",
    "label": "Margin Bottom",
    "info": "Defined in pixels. Do not add the 'px' unit."
  }
],
"blocks": [
  {
    "type": "image",
    "name": "Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "shop_img",
        "label": "Image",
        "info": "270 x 410px recommended"
      },
      {
        "type": "text",
        "id": "title_1",
        "label": "Title 1"
      },
		{
        "type": "text",
        "id": "title_2",
        "label": "Title 2"
      }
    ]
  }
],

  "presets": [
    {
      "name": "Shipping v1",
      "category": "Shipping"
    }
  ]
}
{% endschema %}