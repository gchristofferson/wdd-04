<div data-section-id="{{ section.id }}" data-section-type="blog-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <!--blog-->
    <div class="blog v2">
        <div class="container">
            <h3 class="vow-title v2">{{section.settings.blog_title}}</h3>
            <div class="row">
                {% for article in blogs[section.settings.blog_blog].articles limit: section.settings.blog_limit %}
						{% include 'blog_list-v2' %}
                  	{% else %}
                    	{% include 'empty_blog-v2' %}
                  	{% endfor %}
            </div>
        </div>
    </div>
    <!--end blog-->
</div>

{% schema %}

  {
    "name": "Blog v2",
    "class" : "index-section",
    "settings": [
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "text",
        "id": "blog_title",
        "label": "Title",
        "default": "Lastest Blog post"
      },
	  {
        "type": "blog",
        "id": "blog_blog",
        "label": "Select blog"
      },
      {
        "type": "text",
        "id": "blog_limit",
        "label": "Limit",
        "default": "3"
      },
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
    ],
    "presets": [
      {
        "name": "Blog v2",
        "category": "Blog"
      }
    ]
  }
{% endschema %}