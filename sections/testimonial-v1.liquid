<div data-section-id="{{ section.id }}" data-section-type="testimonial-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
	<!-- shop by cate-->
  <div class="vow-info">
    <div class="quote text-center">
        <p>{{section.settings.title_1}} <span class="vow-color">{{section.settings.title_2}}</span>{{section.settings.title_3}}</p>
    </div>
    <div class="text-center" style="background:url({{ 'ribbon_bg.png' | asset_url }}) no-repeat top center;background-size: contain">
        <div class="vow-img">
            <a href="#" class="hover-images">
               
              	<img {%if section.settings.bg_img == blank%}src="{{'home1_vows.jpg'| asset_url }}" 
                          	{%else%}
                      		src="{{section.settings.bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />
            </a>
        </div>
        <div class="vow-desc">
            <h3 class="h-colect-title v2">{{section.settings.c2_text1}}</h3>
            <p class="v-desc">{{section.settings.c2_text2}}</p>
            <p class="author">{{section.settings.c2_text3}}</p>
        </div>
    </div>
  </div>
  <!-- end shopbycate-->
</div>
{% schema %}
{
  "name": "Testimonial v1",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
	{
      "type": "header",
      "content": "Content 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "default": "We help you plan the best for your dreams,",
      "label": "Text 1"
    },
    {
      "type": "text",
      "id": "title_2",
      "default": "Opportunities don't happen",
      "label": "Text 2"
    },
    {
      "type": "text",
      "id": "title_3",
      "default": ". You create them!",
      "label": "Text 3"
    },
	{
      "type": "header",
      "content": "Content 2"
    },
	{
      "type": "header",
      "content": "Image"
    },
	{
      "type": "image_picker",
      "id": "bg_img",
      "label": "Image",
      "info": "630x660px recommended"
    },
	{
      "type": "text",
      "id": "c2_text1",
      "default": "Marriagevows",
      "label": "Title"
    },
	{
      "type": "text",
      "id": "c2_text2",
      "default": "Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old. Richard McClintock, a Latin professor at Hampden-Sydney College in Virginia, looked up one of the more obscure",
      "label": "Description"
    },
	{
      "type": "text",
      "id": "c2_text3",
      "default": "mv",
      "label": "Author name"
    }
  ],
  "presets": [
    {
      "name": "Testimonial v1",
      "category": "Testimonial"
    }
  ]
}
{% endschema %}