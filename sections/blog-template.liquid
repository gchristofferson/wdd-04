    },
    {
      "type": "checkbox",
      "id": "enable_widget_newletter",
      "label": "Enable?",
      "default": true
    },
    {
      "type": "text",
      "id": "newletter_title",
      "label": "Title",
      "default": "Subscribe to my Newsletter"
    },
    {
      "type": "text",
      "id": "newletter_placeholder",
      "label": "Input placeholder",
      "default": "Your email ..."
    },
    {
      "type": "text",
      "id": "newletter_btn_name",
      "label": "Button name",
      "default": "Submit"
    },
    {
      "type": "header",
      "content": "Widget Instagram"
    },
    {
      "type": "checkbox",
      "id": "enable_widget_instagram",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "widget_instagram_title",
      "label": "Widget Title",
      "default": "Instagram"
    },
    {
      "type": "text",
      "id": "instagram_userid",
      "label": "User ID Instagram",
      "default": "3672948962"
    },
    {
      "type": "text",
      "id": "instagram_access_token",
      "label": "Access Token Instagram",
      "default": "3672948962.0f64772.430edb7f711e4665b59777c54d1ed9ce"
    },
    {
      "type": "text",
      "id": "instagram_limit_number",
      "label": "Limit Image",
      "default": "6"
    },
    {
      "type": "header",
      "content": "Widget Banner"
    },
	{
      "type": "checkbox",
      "id": "enable_widget_banner",
      "label": "Enable",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Image",
      "info": "270x400px recommended"
    },
    {
      "id": "img_url",
      "type": "url",
      "default": "/collections/all",
      "label": "Image link"
    },
    {
      "type": "header",
      "content": "Widget Tags"
    },
    {
      "type": "checkbox",
      "id": "enable_widget_tags",
      "label": "Enable",
      "default": true
    },
    {
      "type": "text",
      "id": "widget_tags_title",
      "label": "Widget Title",
      "default": "Tags"
    },
    {
      "type": "header",
      "content": "Config"
    },
    {
      "type": "checkbox",
      "id": "blog_show_date",
      "label": "Show date",
      "default": true
    }
  ]
}
{% endschema %}
