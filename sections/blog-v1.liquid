<div data-section-id="{{ section.id }}" data-section-type="blog-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <!--blog-->
    <div class="blog">
        <div class="container">
            <h3 class="vow-title v5">{{section.settings.blog_title}}</h3>
            <div class="row row-flex">
                {% for article in blogs[section.settings.blog_blog].articles limit: section.settings.blog_limit %}
						{% include 'blog_list-v1' %}
                  	{% else %}
                    	{% include 'empty_blog-v1' %}
                  	{% endfor %}
                <div class="col-xs-12 col-sm-4 col-md-4 blog-item">
                    <a href="{{section.settings.img_url}}" class="hover-images">
                      
                      <img {%if section.settings.bg_img == blank%}src="{{'home1_blog.jpg'| asset_url }}" 
                          	{%else%}
                      		src="{{section.settings.bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />
                  	</a>
                </div>
            </div>
        </div>
    </div>
    <!--end blog-->
</div>

{% schema %}

  {
    "name": "Blog v1",
    "class" : "index-section",
    "settings": [
      {
        "type": "header",
        "content": "Settings"
      },
      {
        "type": "text",
        "id": "blog_title",
        "label": "Title",
        "default": "Lastest Blog post"
      },
      {
        "type": "blog",
        "id": "blog_blog",
        "label": "Select blog"
      },
      {
        "type": "text",
        "id": "blog_limit",
        "label": "Limit",
        "default": "2"
      },
		{
        "type": "header",
        "content": "Image"
      },
	{
      "type": "image_picker",
      "id": "bg_img",
      "label": "Image",
      "info": "370x340px recommended"
    },
	{
      "id": "img_url",
      "type": "url",
      "default": "/collections/all",
      "label": "Image link"
    },
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
    ],
    "presets": [
      {
        "name": "Blog v1",
        "category": "Blog"
      }
    ]
  }
{% endschema %}