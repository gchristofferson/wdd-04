<div data-section-id="{{ section.id }}" data-section-type="collection-product-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section id="contenthome2">	 
  <div class="vow-collection">
      <div class="collection-content">
          <div class="container">
             <div class="row">
                 <div class="col-xs-12 col-md-7 c-left colect-inner">
                     <h3 class="h2-colect-title v2">{{section.settings.b1_title_1}}</h3>
                     <p class="h2-colect-desc v2">{{section.settings.b1_title_2}}</p>
                      {% if section.settings.b1_product_single_1 != blank %}
                        {% include 'collection-product-single-v1' %}
                      {% else %}
                        {% include 'empty-collection-product-single-v1' %}
                      {% endif %}
                       {% if section.settings.b1_product_single_2 != blank %}
                          {% include 'collection-product-single-v2' %}
                        {% else %}
                          {% include 'empty-collection-product-single-v2' %}
                        {% endif %}
                 </div>
                 <div class="col-xs-12 col-md-5 h2-colect-ovl">
                     <a href="{{section.settings.b1_img_url}}" class="hover-images">
                       <img {%if section.settings.b1_bg_img == blank%}src="{{'groom_3.jpg'| asset_url }}" 
                          	{%else%}
                      		src="{{section.settings.b1_bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />
                   	</a>
                 </div>
             </div> 
          </div>
      </div>

      <div class="collection-content v2">
          <div class="container">
             <div class="row">
                 <div class="col-xs-12 col-md-7 colect-inner c-left">
                     <h3 class="h2-colect-title">{{section.settings.b2_title_1}}</h3>
                     <p class="h2-colect-desc">{{section.settings.b2_title_2}}</p>
                     {% if section.settings.b2_product_single_1 != blank %}
                          {% include 'collection-product-single-v3' %}
                        {% else %}
                          {% include 'empty-collection-product-single-v3' %}
                        {% endif %}
                     <div class="clearfix"></div>
                     {% if section.settings.b2_product_single_2 != blank %}
                          {% include 'collection-product-single-v4' %}
                        {% else %}
                          {% include 'empty-collection-product-single-v4' %}
                        {% endif %}
                 </div>
                 <div class="col-xs-12 col-md-5 h2-colect-ovl v2">
                     <a href="{{section.settings.b2_img_url}}" class="hover-images">
                       <img {%if section.settings.b2_bg_img == blank%}src="{{'bride_1.jpg'| asset_url }}" 
                          	{%else%}
                      		src="{{section.settings.b2_bg_img | img_url:'master'}}" class="img-reponsive"{%endif%} alt="" />
                   	</a>
                 </div>
             </div> 
          </div>
      </div>
  </div>
  </section>
</div>

