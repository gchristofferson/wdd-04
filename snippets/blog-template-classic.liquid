<div class="news-sidebar">
    <div class="container">
        <div class="row">
            <div class="main-content col-xs-12 col-sm-8 col-md-9">
                {% for article in blog.articles %}
                <div class="single-post-item">
                    {% if article.image %}
                    <div class="blog-img">
                        <a href="{{article.url}}" class="hover-images"><img src="{{ article.image.src | img_url: 'master' }}" alt="{{article.title}}" class="img-reponsive"></a>
                    </div>
                    {% endif %}
                    <div class="blog-info">
                        <div class="post-element v2">
                            <div class="post-date">{{ article.created_at | date: "%B %d, %Y" }}</div>
                            <div class="post-date post-author">{{article.author}}</div>
                            
                            <div class="post-date post-author"><i class="fa fa-share-alt"></i></div>
                        </div>
                        <h3 class="post-title v4"><a class="v-color1" href="{{article.url}}">{{article.title}}</a></h3>
                        <p class="post-desc">{{article.excerpt}}</p>
                        <a href="{{article.url}}" class="btn-post">Read more</a>
                    </div>
                </div>
                {% endfor %}
                <div class="single-post-pagination">
                  	{% if paginate.previous.is_link %}
                    <a href="{{ paginate.previous.url }}" class="btn-pagi btn-prev"><i class="fa fa-long-arrow-left"></i>prev</a>
                  	{% endif %}
                    <ul class="pagination">
                      	{% assign count = paginate.pages %}
                      	{% for part in (1..count) %}
                      	<li><a {% if paginate.current_page == part %}{% endif %} href="{{ collection.url }}?page={{ forloop.index }}">{{ forloop.index }}</a></li>

                  
						{% endfor %}
                    </ul>
                  	{% if paginate.next.is_link %}
                    <a href="{{ paginate.next.url }}" class="btn-pagi btn-next2">next<i class="fa fa-long-arrow-right"></i></a>
                  	{% endif %}
                </div>
            </div>
            {% include 'blog-sidebar'%}
        </div>
        <div class="blog-bottom productfull-bottom">
            {% include 'pagination'%}
        </div>
    </div>
</div>